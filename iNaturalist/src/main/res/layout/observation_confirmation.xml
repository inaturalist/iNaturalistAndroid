<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:background="#ffffff"
    >
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/errors"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Errors"
        android:background="#F3D4DB"
        android:textColor="#C8565F"
        android:padding="10dp"
        android:visibility="gone"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingLeft="16dp"
        android:paddingStart="16dp"
        android:paddingRight="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:background="#EDEDED"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/take_photo"
            android:background="@drawable/circular_add_photo"
            android:layout_width="50dp"
            android:layout_height="50dp">
                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/ic_add_a_photo_black_24dp"
                    android:layout_centerInParent="true"
                    android:alpha="0.6"
                    />
        </RelativeLayout>

        <org.lucasr.twowayview.TwoWayView
            android:id="@+id/gallery"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            style="@style/TwoWayView"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:drawSelectorOnTop="false"
            tools:context=".ObservationEditor"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:paddingLeft="16dp"
        android:paddingStart="16dp"
        android:paddingRight="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="6dp"
        android:paddingBottom="8dp"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/species_guess_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_species_guess_black_24dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:alpha="0.6"
            />
        
        <EditText
            android:id="@+id/speciesGuess"
            android:layout_height="60dp"
            android:layout_width="wrap_content"
            android:hint="@string/species_guess_hint"
            android:layout_toRightOf="@id/species_guess_icon"
            android:layout_toEndOf="@id/species_guess_icon"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:clickable="false"
            android:focusable="false"
            android:background="#00000000"
            />
    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp"
        android:background="#dfdfdf"
        />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:paddingLeft="16dp"
        android:paddingStart="16dp"
        android:paddingRight="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/help_id_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_announcement_black_24dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:tint="#686868"
            />


        <org.jraf.android.backport.switchwidget.Switch
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/id_please"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:textColor="#ffffff"
            app:switchTextAppearance="@style/SwitchTextStyle"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/help_id_icon"
            android:layout_toEndOf="@id/help_id_icon"
            android:layout_toLeftOf="@id/id_please"
            android:layout_toStartOf="@id/id_please"
            android:text="@string/help_id_this_species"
            android:textColor="#000000"
            android:textSize="16sp"
            />

        <!--
        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switch_compat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="25dp"
            android:checked="false" />
            -->
    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp"
        android:background="#dfdfdf"
        />


    <RelativeLayout
        android:layout_width="fill_parent"
        android:paddingLeft="16dp"
        android:paddingStart="16dp"
        android:paddingRight="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/notes_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_assignment_black_24dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:tint="#686868"
            />


        <EditText
            android:id="@+id/description"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:minHeight="50dp"
            android:inputType="textMultiLine"
            android:layout_toRightOf="@id/notes_icon"
            android:layout_toEndOf="@id/notes_icon"
            android:isScrollContainer="true"
            android:hint="@string/notes"
            android:background="#00000000"
            />

    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp"
        android:background="#dfdfdf"
        />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:paddingLeft="16dp"
        android:paddingStart="16dp"
        android:paddingRight="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/time_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_access_time_black_24dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:tint="#686868"
            />

        <TextView
            android:id="@+id/observed_on_string"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/observed_on"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/time_icon"
            android:layout_toEndOf="@id/time_icon"
            android:text="@string/set_date"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/time_observed_at"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@id/observed_on"
            android:layout_toEndOf="@id/observed_on"
            android:text="@string/set_time"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            />

    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#dfdfdf"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp"
        />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:paddingLeft="16dp"
        android:paddingStart="16dp"
        android:paddingRight="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/location_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_location_on_black_24dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:tint="#686868"
            />

        <ProgressBar
            android:id="@+id/locationProgress"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="5dp"
            android:layout_centerInParent="true"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/locationRefreshButton"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/location_icon"
            android:layout_toEndOf="@id/location_icon"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/location_guess"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/set_location"
                android:ellipsize="end"
                android:lines="1"
                android:textSize="16sp"
                android:visibility="visible"
                />

            <LinearLayout
                android:id="@+id/coordinates"
                android:orientation="horizontal"
                android:layout_below="@id/location_guess"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/coordinates_lat"
                    android:textSize="12sp"
                    android:textColor="#929292"
                    android:layout_marginRight="2dp"
                    android:layout_marginEnd="2dp"
                    />
                <TextView
                    android:id="@+id/latitude"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="12.34567890123"
                    android:textSize="12sp"
                    android:textColor="#929292"
                    android:layout_marginRight="4dp"
                    android:layout_marginEnd="4dp"
                    android:maxWidth="80dp"
                    android:ellipsize="end"
                    android:lines="1"
                    />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/coordinates_lon"
                    android:textSize="12sp"
                    android:textColor="#929292"
                    android:layout_marginRight="4dp"
                    android:layout_marginEnd="4dp"
                    />
                <TextView
                    android:id="@+id/longitude"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#929292"
                    android:layout_marginRight="4dp"
                    android:layout_marginEnd="4dp"
                    android:text="12.34567890123"
                    android:maxWidth="80dp"
                    android:ellipsize="end"
                    android:lines="1"
                    />
                <TextView
                    android:id="@+id/accuracy_prefix"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/coordinates_acc"
                    android:textSize="12sp"
                    android:textColor="#929292"
                    android:layout_marginRight="2dp"
                    android:layout_marginEnd="2dp"
                    />
                <TextView
                    android:id="@+id/accuracy"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#929292"
                    android:text="34567890123"
                    android:maxWidth="80dp"
                    android:ellipsize="end"
                    android:lines="1"
                    />

            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#dfdfdf"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp"
        />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:paddingLeft="16dp"
        android:paddingStart="16dp"
        android:paddingRight="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/location_visibility_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_public_black_24dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:tint="#686868"
            />

        <RelativeLayout
            android:id="@+id/locationVisibility"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/location_visibility_icon"
            android:layout_toEndOf="@id/location_visibility_icon"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/location_visibility_description"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Location is open"
                android:textSize="16sp"
                />
            <Spinner
                android:id="@+id/geoprivacy"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/geoprivacy_items"
                android:entryValues="@array/geoprivacy_values" />
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#dfdfdf"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp"
        />


    <RelativeLayout
        android:layout_width="fill_parent"
        android:paddingLeft="16dp"
        android:paddingStart="16dp"
        android:paddingRight="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/is_captive_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_nature_people_black_24dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:tint="#686868"
            />


        <TextView
            android:id="@+id/is_captive"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/is_captive"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/is_captive_icon"
            android:layout_toEndOf="@id/is_captive_icon"
            />

        <!--
        <CheckBox
            android:id="@+id/is_captive_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            />
            -->

        <RelativeLayout
            android:id="@+id/is_captive_checkbox"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingLeft="40dp"
            android:paddingStart="40dp"
            android:layout_width="60dp"
            android:layout_height="20dp">
            <ImageView
                android:id="@+id/is_captive_on_icon"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/ic_action_accept"
                android:background="#74ac00"
                android:tint="#ffffff"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/is_captive_off_icon"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/ic_check_box_white_24dp"
                android:background="@drawable/border"
                />
        </RelativeLayout>

    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#dfdfdf"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp"
        />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:paddingLeft="16dp"
        android:paddingStart="16dp"
        android:paddingRight="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/projects_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_work_black_24dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:tint="#686868"
            />

        <TextView
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/project_count"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="0"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="right"
            />


        <TextView
            android:layout_toRightOf="@id/projects_icon"
            android:layout_toEndOf="@id/projects_icon"
            android:layout_toLeftOf="@id/project_count"
            android:layout_toStartOf="@id/project_count"
            android:id="@+id/select_projects"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="@string/projects"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#dfdfdf"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp"
        />

</LinearLayout>
</ScrollView>