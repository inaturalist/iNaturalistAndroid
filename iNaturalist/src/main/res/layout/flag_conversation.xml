<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioGroup
            android:id="@+id/flag_types"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <!-- Content will be added dynamically -->
        </RadioGroup>
    </ScrollView>

    <LinearLayout
        android:id="@+id/flag_explanation_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/why_are_you_flagging_this_item"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/flag_explanation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_white_borders_background"
            android:inputType="textMultiLine|textCapSentences"
            android:paddingLeft="17dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:minLines="5"
            android:maxLines="5"
            android:gravity="top"
            android:hint="@string/why_are_you_flagging_this_item"
            />

    </LinearLayout>
</LinearLayout>