<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

<RelativeLayout
    android:id="@+id/taxon_result"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">
    
       <ImageView
           android:id="@+id/id_pic"
           android:layout_width="40dp"
           android:layout_height="40dp"
           android:layout_alignParentStart="true"
           android:layout_centerVertical="true"
           android:layout_marginEnd="5dp"
           android:importantForAccessibility="no"
           android:src="@drawable/actionbar_back_indicator" />

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/id_pic"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/id_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#000000"
                android:text="TextView" />

            <TextView
                android:id="@+id/id_taxon_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#8A000000"
                android:textSize="14sp"
                android:text="TextView" />
      </LinearLayout>

</RelativeLayout>

<RelativeLayout
    android:id="@+id/unknown_taxon_result"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

       <ImageView
           android:id="@+id/unknown_id_pic"
           android:layout_width="32dp"
           android:layout_height="32dp"
           android:layout_alignParentStart="true"
           android:layout_centerVertical="true"
           android:layout_marginEnd="16dp"
           android:importantForAccessibility="no"
           android:alpha="0.54"
           android:src="@drawable/ic_species_guess_black_24dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/unknown_id_pic"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#000000"
                android:text="@string/unknown" />
      </LinearLayout>

</RelativeLayout>

</RelativeLayout>
