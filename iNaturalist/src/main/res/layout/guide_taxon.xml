<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <Gallery
            android:id="@+id/gallery"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:spacing="5dp" />

        <TextView
            android:id="@+id/displayName"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Display name long" />

        <TextView
            android:id="@+id/name"
            android:textSize="18dp"
            android:textColor="#888888"
            android:textStyle="italic"
            android:text="Scientific Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/sections"
            android:paddingTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>


        <LinearLayout
            android:id="@+id/sources_and_attrs_section"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/sources_title"
                android:textSize="24dp"
                android:paddingBottom="5dp"
                android:textColor="#888888"
                android:text="@string/sources_and_attribution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/attributions_photos"
                android:textSize="14dp"
                android:textColor="#888888"
                android:text="@string/photos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/attributions_text"
                android:textSize="14dp"
                android:textColor="#888888"
                android:text="@string/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
