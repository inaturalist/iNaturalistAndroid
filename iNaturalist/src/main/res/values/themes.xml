<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme" parent="Theme.Sherlock.Light">
        <!--<item name="switchStyle">@style/Widget.Holo.Light.CompoundButton.Switch</item>-->
        <item name="switchStyle">@style/iNatAppThemeSwitch</item>
    </style>

    <style name="iNatAppThemeSwitch" parent="Widget.Holo.Light.CompoundButton.Switch">
        <item name="track">@drawable/inatapptheme_switch_track_holo_light</item>
        <item name="thumb">@drawable/inatapptheme_switch_inner_holo_light</item>
        <item name="switchTextAppearance">@style/iNatAppTextAppearanceSwitch</item>
        <item name="textOn">@string/yes</item>
        <item name="textOff">@string/no</item>
        <item name="thumbTextPadding">12dip</item>
        <item name="switchMinWidth">96dip</item>
        <item name="switchPadding">16dip</item>
    </style>

    <style name="iNatAppTextAppearanceSwitch" parent="android:TextAppearance.Small">
        <item name="android:textColor">#ff3c3f41</item>
    </style>


  <style name="iNatAppTheme" parent="@style/_iNatAppTheme"/>

    <style name="_iNatAppTheme" parent="Theme.Sherlock.Light">

        <item name="switchStyle">@style/Widget.Holo.Light.CompoundButton.Switch</item>

        <item name="android:editTextStyle">@style/EditTextiNatAppTheme</item>

        <item name="android:textColorHighlight">#99669900</item>

        <item name="android:checkboxStyle">@style/CheckBoxiNatAppTheme</item>

        <item name="android:radioButtonStyle">@style/RadioButtoniNatAppTheme</item>

        <item name="android:buttonStyle">@style/ButtoniNatAppTheme</item>

        <item name="android:imageButtonStyle">@style/ImageButtoniNatAppTheme</item>

        <item name="android:spinnerStyle">@style/SpinneriNatAppTheme</item>

        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItemiNatAppTheme</item>

        <item name="android:progressBarStyleHorizontal">@style/ProgressBariNatAppTheme</item>

        <item name="android:buttonStyleToggle">@style/ToggleiNatAppTheme</item>

        <item name="android:listViewStyle">@style/ListViewiNatAppTheme</item>

        <item name="android:listViewWhiteStyle">@style/ListViewiNatAppTheme.White</item>

        <item name="android:spinnerItemStyle">@style/SpinnerItemiNatAppTheme</item>
    </style>

</resources>
